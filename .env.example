# Auth Service Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
# Choose between sqlite and postgresql
AUTH_DATABASE_TYPE=sqlite
# Full database connection URL (overrides other DB settings if provided)
AUTH_DATABASE_URL=
# SQLite database file path (used when DATABASE_TYPE=sqlite)
AUTH_SQLITE_PATH=~/.auth.sqlite3
# PostgreSQL connection URL (used when DATABASE_TYPE=postgresql)
AUTH_POSTGRESQL_URL=postgresql://username:password@localhost:5432/dbname

# JWT Authentication
# IMPORTANT: Change this secret key in production!
AUTH_JWT_SECRET_KEY=default_secret_key_for_development
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
AUTH_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security & CORS
AUTH_ALLOW_CORS=true
# Comma-separated list of allowed origins, or * for all
AUTH_CORS_ORIGINS=*
AUTH_ENABLE_AUDIT_LOGGING=true

# Server Configuration
AUTH_SERVER_HOST=127.0.0.1
AUTH_SERVER_PORT=8000
AUTH_DEBUG_MODE=false

# Field-Level Encryption (optional)
# Enable encryption for sensitive data fields
AUTH_ENABLE_ENCRYPTION=false
# Fernet encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AUTH_ENCRYPTION_KEY=
