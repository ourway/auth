# Database Configuration - Using SQLite for testing
AUTH_DB_TYPE=sqlite
# PostgreSQL settings (only used if AUTH_DB_TYPE=postgresql)
# POSTGRESQL_URL=postgresql://auth_user:auth_pass123@localhost:5432/auth_db
AUTH_DB_URL=

# JWT Configuration
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7



# Security
ALLOW_CORS=true
CORS_ORIGINS=*
ENABLE_AUDIT_LOGGING=true

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=4000
DEBUG=false

# Encryption (disabled by default)
ENABLE_ENCRYPTION=false
ENCRYPTION_KEY=